<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabTwo"
    android:background="@drawable/bg">

    <!-- Categories -->
    <LinearLayout
        android:id="@+id/categories"
        android:layout_width="400dp"
        android:layout_height="489dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4750B0"
            android:text="TOP SÁCH TÂM LÝ,TÌNH CẢM"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"/>


        <!-- Book List -->
        <LinearLayout
            android:id="@+id/book_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example Book Item -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#7064C5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_thumbnail"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/books5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tư duy nhanh và chậm"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By:Daniel Kahneman"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tâm Lý"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/play"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint"
                android:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#7064C5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_thumbnail1"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/books6" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/book_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tâm Lý Học Đám Đông"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/book_author1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By:Gustave Le Bon"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_rating1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_genre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tâm Lý"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/play_button2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/play"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint"
                android:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#7064C5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_thumbnail2"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/books7" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/book_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trà Hoa Nữ"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/book_author2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By:Alexandre Dumas"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_rating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_genre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tình Cảm"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/play_button3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/play"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint"
                android:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#7064C5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_thumbnail3"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/books8" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/book_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đàn Ông Sao Hỏa, Đàn Bà Sao Kim"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/book_author3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By:John Gray"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_rating3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.6"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/book_genre3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tình Cảm"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/play_button3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/play"
                tools:ignore="DuplicateIds,SpeakableTextPresentCheck,TouchTargetSizeCheck,UseAppTint"
                android:tint="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>